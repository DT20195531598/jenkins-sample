pipeline { agent any parameters { string(name: 'master', defaultValue: 'main', description: 'Git branch to build') } stages { stage('Checkout') { steps { // Clean workspace before checkout cleanWs() // Checkout code from Git repository checkout([$class: 'GitSCM', branches: [[name: "${params.master}"]], userRemoteConfigs: [[ url: 'https://github.com/ramyasrichimata412@gmail.com/https://github.com/DT20195531598/jenkins-sample.git', credentialsId: 'ramyasrichimata412@gmail.com' ]], extensions: [[$class: 'CloneOption', depth: 1, noTags: false, reference: '', shallow: true]] ]) } } stage('List Files') { steps { // List files to verify checkout sh 'ls -R' } } } post { success { echo 'Repository checkout successful!' } failure { echo 'Repository checkout failed. Please check the logs for details.' } } }
